{
  "name": "banner-staging",
  "version": "1.0.0",
  "description":
    "A banner staging boilerplate project, to house all banners for a specific client",
  "main": "index.js",
  "scripts": {
    "test": "eslint src && preact test",
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build",
    "serve": "preact build && preact serve",
    "production":
      "cross-env NODE_ENV=production npm run fetch && preact build && npm run copyFiles",
    "copyFiles": "babel-node copyFiles",
    "fetch": "babel-node fetch",
    "dev": "preact watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "devDependencies": {
    "axios": "^0.16.2",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.1.1",
    "eslint": "^4.7.2",
    "eslint-config-synacor": "^2.0.0",
    "fs-extra": "^4.0.2",
    "if-env": "^1.0.0",
    "node-sass": "^4.5.3",
    "postcss-cssnext": "^3.0.2",
    "postcss-loader": "^2.0.6",
    "preact-cli": "^1.4.1",
    "sass-loader": "^6.0.6",
    "slugify": "^1.2.1"
  },
  "dependencies": {
    "dateformat": "^3.0.2",
    "faker": "^4.1.0",
    "preact": "^8.2.5",
    "preact-compat": "^3.17.0",
    "preact-router": "^2.5.7",
    "react-toolbox": "^2.0.0-beta.12",
    "save-dev": "^2.0.0"
  },
  "config": {
    "campaigns": [
      "http://media.campjefferson.ca/clients/porsche/996-classic",
      "http://media.campjefferson.ca/clients/koodo/junesale-wontlast-50-bonus",
      "http://media.campjefferson.ca/clients/koodo/roi-sfd-generic"
    ]
  },
  "performance": {
    "maxAssetSize": 500000,
    "maxEntrypointSize": 3500000
  }
}
